{
  "id": "no.almli.eliqpulse",
  "version": "0.0.1",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Eliq Pulse"
  },
  "tags": {
    "en": [
      "eliq",
      "pulse",
      "energy"
    ]
  },
  "description": {
    "en": "Eliq Pulse integration"
  },
  "category": [
    "tools"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Bjørnar Almli",
    "email": "bjornar.almli@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Bjørnar Almli",
        "email": "bjornar.almli@gmail.com"
      }
    ]
  },
  "flow": {
    "triggers": [
      {
        "id": "request_failed",
        "title": {
          "en": "Request failed"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=EliqPulse"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "EliqPulse",
      "name": {
        "en": "EliqPulse"
      },
      "class": "other",
      "capabilities": [
        "measure_power",
        "heating_measure_power",
        "water_measure_power",
        "other_measure_power",
        "meter_power",
        "meter_power_yesterday"
      ],
      "capabilitiesOptions": {
        "measure_power": {
          "title": {
            "en": "Total"
          }
        },
        "heating_measure_power": {
          "title": {
            "en": "Heating"
          }
        },
        "water_measure_power": {
          "title": {
            "en": "Water"
          }
        },
        "other_measure_power": {
          "title": {
            "en": "Other"
          }
        },
        "meter_power": {
          "title": {
            "en": "Meter today"
          },
          "units": {
            "en":  "kWh"
          }
        },
        "meter_power_yesterday": {
          "title": {
            "en": "Meter yesterday"
          },
          "units": {
            "en":  "kWh"
          }
        }
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/EliqPulse/assets/images/large.png",
        "small": "/drivers/EliqPulse/assets/images/small.png"
      }
    }
  ],
  "capabilities": {
    "heating_measure_power": {
      "type": "number",
      "title": {
        "en": "Heating"
      },
      "units": {
        "en": "W"
      },
      "insights": true,
      "desc": {
        "en": "Power in Watt (W)"
      },
      "options": {
        "isGenerator": {
          "type": "boolean",
          "default": false,
          "desc": {
            "en": "This flag is used to determine whether this devices uses or generates power."
          }
        }
      },
      "chartType": "stepLine",
      "decimals": 0,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
    "water_measure_power": {
      "type": "number",
      "title": {
        "en": "Water"
      },
      "units": {
        "en": "W"
      },
      "insights": true,
      "desc": {
        "en": "Power in Watt (W)"
      },
      "options": {
        "isGenerator": {
          "type": "boolean",
          "default": false,
          "desc": {
            "en": "This flag is used to determine whether this devices uses or generates power."
          }
        }
      },
      "chartType": "stepLine",
      "decimals": 0,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
    "other_measure_power": {
      "type": "number",
      "title": {
        "en": "Other"
      },
      "units": {
        "en": "W"
      },
      "insights": true,
      "desc": {
        "en": "Power in Watt (W)"
      },
      "options": {
        "isGenerator": {
          "type": "boolean",
          "default": false,
          "desc": {
            "en": "This flag is used to determine whether this devices uses or generates power."
          }
        }
      },
      "chartType": "stepLine",
      "decimals": 0,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    },
      "meter_power_yesterday": {
      "type": "number",
      "title": {
        "en": "Power meter yesterday"
      },
      "units": {
        "en": "kWh"
      },
      "insights": true,
      "desc": {
        "en": "Power usage in KiloWattHour (kWh)"
      },
      "options": {
        "isGenerator": {
          "type": "boolean",
          "default": false,
          "desc": {
            "en": "This flag is used to determine whether this devices uses or generates power."
          }
        }
      },
      "chartType": "spline",
      "decimals": 2,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor"
    }
  }
}